@model TrackAnalyser.Models.ViewModels.RankViewModel 

<div>
    <br />
    <br />
    <div class="text-center">
        <p style="font-size:xx-large">This is the top 100 tracks </p>
    </div>
    <br />
    <br />
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Track Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Number of Plays</th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var element in Model.RankElements.Select((value, index) => (value, index)))
                {
                    int no = element.index + 1;
                    <tr>
                        <th scope="row">@no</th>
                        <td>@element.value.TrackName</td>
                        <td>@element.value.TrackArtist</td>
                        <td>@element.value.TotalPlayback</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>