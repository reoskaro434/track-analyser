@model TrackAnalyser.Models.ViewModels.BroadcastListViewModel
@using TrackAnalyser.Utilities

<div>
    <br />
    <br />
    <a id="download" asp-action="" class="col-md-2 text-center text-white offset-md-10 btn btn-info sticky-top">
        Download List <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
            <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
        </svg>
    </a>

    <div id="filter">
        <div class="row">
            <div class="col-md-5 mt-1">
                <input id="search" type="text" class="form-control" placeholder="Find the track you are looking for...">
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="d-md-flex flex-md-row">
            <div class="col-md-3 d-flex">
                <select id="sortBy" class="btn btn-light m-1 flex-fill">
                    <option selected>none</option>
                    <option value=@StaticDetails.SORT_BY_CANAL>canal</option>
                    <option value=@StaticDetails.SORT_BY_DURATION>duration</option>
                    <option value=@StaticDetails.SORT_BY_EMISSION_DATE>emision</option>
                    <option value=@StaticDetails.SORT_BY_DESCRIPTION>description</option>
                </select>
            </div>
            <div class="col-md-3 d-flex">
                <select id="sortType" class="btn btn-light m-1 flex-fill">
                    <option value=@StaticDetails.SORT_ASCENDING>ascending</option>
                    <option value=@StaticDetails.SORT_DESCENDING>descending</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <div id="showTracks">
        @await Html.PartialAsync("_ShowTracks", Model)
    </div>
</div>
<script src="~/js/BroadcastList/showTracks.js"></script>
<script src="~/js/BroadcastList/downloadEmissions.js"></script>